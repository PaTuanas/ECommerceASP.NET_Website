@model ECommerceC_.ViewModels.ProductDetailVM
@{
	ViewData["Title"] = "Edit";
}

<!-- Checkout Page Start -->
<div class="container-fluid py-2">
	<div class="container py-5">
		<h1 class="mb-4">Edit Product</h1>
		<form method="post" asp-action="Edit" enctype="multipart/form-data">
			<div class="row">
				<img src="~/Hinh/HangHoa/@Model.ProductImg" class="img-fluid rounded" alt="@Model.ProductImg">
				<input type="hidden" asp-for="@Model.ProductImg" class="form-control">
				<div class="form-item">
					<label class="form-label my-3" asp-for="@Model.ProductName"></label><sup>*</sup>
					<input asp-for="@Model.ProductName" class="form-control">
					<span asp-validation-for="@Model.ProductName" class="text-danger"></span>
				</div>
				<div class="col-md-12 col-lg-6">
					<div class="form-item w-100">
						<label asp-for="@Model.ProductId" class="form-label my-3"></label><sup>*</sup>
						<input asp-for="@Model.ProductId" class="form-control">
						<span asp-validation-for="@Model.ProductId" class="text-danger"></span>
					</div>
				</div>
				<div class="col-md-12 col-lg-6">
					<div class="form-item w-100">
						<label asp-for="@Model.ProductPrice" class="form-label my-3"></label><sup>*</sup>
						<input asp-for="@Model.ProductPrice" class="form-control">
						<span asp-validation-for="@Model.ProductPrice" class="text-danger"></span>
					</div>
				</div>

				<div class="form-item">
					<label class="form-label my-3" asp-for="@Model.ProductType"></label><sup>*</sup>
					<input asp-for="@Model.ProductType" class="form-control">
					<span asp-validation-for="@Model.ProductType" class="text-danger"></span>
				</div>
				<div class="col-md-12 col-lg-6">
					<div class="form-item w-100">
						<label asp-for="@Model.Supplier" class="form-label my-3"></label><sup>*</sup>
						<input asp-for="@Model.Supplier" class="form-control">
						<span asp-validation-for="@Model.Supplier" class="text-danger"></span>
					</div>
					<div class="form-item w-100">
						<label asp-for="@Model.ProductDetail" class="form-label my-3"></label><sup>*</sup>
						<input asp-for="@Model.ProductDetail" class="form-control">
						<span asp-validation-for="@Model.ProductDetail" class="text-danger"></span>
					</div>
				</div>
				<div class="col-md-12 col-lg-6">
					<div class="form-item w-100">
						<label asp-for="@Model.ProductQuantity" class="form-label my-3"></label><sup>*</sup>
						<input asp-for="@Model.ProductQuantity" class="form-control">
						<span asp-validation-for="@Model.ProductQuantity" class="text-danger"></span>
					</div>
					<div class="form-item w-100">
						<label asp-for="@Model.ProductRating" class="form-label my-3"></label><sup>*</sup>
						<input asp-for="@Model.ProductRating" class="form-control">
						<span asp-validation-for="@Model.ProductRating" class="text-danger"></span>
					</div>
				</div>
				<div class="form-item">
					<label class="form-label my-3" asp-for="@Model.ProductDescription"></label><sup>*</sup>
					<input asp-for="@Model.ProductDescription" class="form-control">
					<span asp-validation-for="@Model.ProductDescription" class="text-danger"></span>
				</div>
				<div class="form-item">
					<label for="ProductImg" class="form-label my-3">Image</label>
					<input type="file" name="img" id="ProductImg" class="form-control">
				</div>

			</div>
			<div class="row g-4 text-center align-items-center justify-content-center pt-4">
				<button type="submit" class="btn border-primary py-3 px-4 text-uppercase w-25 text-primary">Save</button>
			</div>
		</form>
	</div>
</div>
