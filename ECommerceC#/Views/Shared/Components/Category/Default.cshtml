@model IEnumerable<ECommerceC_.ViewModels.CategoryVM>

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Categories</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach(var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        <a asp-controller="Product" asp-action="Index" asp-route-categoryId="@item.IdProduct">
                            <i class="fas fa-apple-alt me-2"></i>@item.ProductName
                        </a>
                        <span>@item.Quantity</span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>